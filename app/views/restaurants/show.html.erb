<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>
<h2>
  <%= @restaurant.name %>
</h2>
<h3>
<%= @restaurant.category %>
</h3>
<p>Address: <%= @restaurant.address %>, <%= @restaurant.phone_number %> </p>

<%= link_to "New Review", new_restaurant_review_path(@restaurant) %>

<h3>Reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review|%>
    <li class="list-group-item"><%= review.rating %>: <%= review.content %></li>
  <% end %>
</ul>
